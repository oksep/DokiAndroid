<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#FFF5F8FA">

    <TextView
        android:id="@+id/sendMsgBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/followBtn"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:text="发消息"
        android:drawableStart="@drawable/ic_send_msg"
        android:drawablePadding="6dp"
        android:background="?selectableItemBackgroundBorderless"
        android:gravity="center"
        android:textColor="#FF666666"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/followBtn"
        app:layout_constraintLeft_toRightOf="@+id/sendMsgBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/profile_detail_follow_plus"
        android:drawableStart="@drawable/ic_follow_plus"
        android:drawablePadding="6dp"
        android:background="?selectableItemBackgroundBorderless"
        android:gravity="center"
        android:textColor="#FF666666"
        tools:textColor="@color/dd_red"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>