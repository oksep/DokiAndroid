<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create.CreateProfileActivity">

    <com.dokiwa.dokidoki.ui.view.ToolBar
        android:id="@+id/toolBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tb_left_ic="@drawable/ic_back_light"
        app:tb_right_text="@string/profile_create_profile_skip"
        app:tb_right_text_color="@color/white"
        app:tb_title_color="@color/white"
        android:background="@drawable/bg_toolbar"
        tools:layout_height="44dp"
        tools:background="@color/dd_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tip"
        android:gravity="center"
        android:text="@string/profile_create_profile_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/dd_red"
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_edit"
        android:drawablePadding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

    <com.dokiwa.dokidoki.ui.view.NonSwipeViewPager
        app:layout_constraintTop_toBottomOf="@+id/tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>