<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".create.CreateProfileActivity">

    <com.dokiwa.dokidoki.ui.view.ToolBar
        android:id="@+id/toolBar"
        app:tb_left_ic="@drawable/ic_back_light"
        app:tb_right_text="@string/profile_create_profile_skip"
        app:tb_right_text_color="@color/white"
        app:tb_title_color="@color/white"
        android:background="@drawable/bg_toolbar"
        tools:layout_height="44dp"
        tools:background="@color/dd_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tip"
        android:gravity="center"
        android:text="@string/profile_create_profile_tip"
        android:textColor="@color/dd_red"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_edit"
        android:drawablePadding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

    <com.dokiwa.dokidoki.ui.view.NonSwipeViewPager
        android:background="@color/white"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>