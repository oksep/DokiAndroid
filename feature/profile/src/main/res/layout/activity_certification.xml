<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail.ProfileDetailActivity">

    <com.dokiwa.dokidoki.ui.view.AppToolBar
        android:id="@+id/toolBar"
        style="@style/AppToolBar.Icon.Left"
        android:background="@drawable/ui_bg_toolbar"
        android:elevation="@dimen/ui_toolbar_elevation"
        app:toolbar_titleText="@string/profile_certify_mine"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:background="@color/white"
        android:drawableStart="@drawable/ui_ic_identify"
        android:text="@string/profile_certify_identify_title"
        android:padding="15dp"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/line_light"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <FrameLayout
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/identifyCertifyDesc"
            android:textColor="@color/text_tip"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/profile_certify_not_available"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/identifyCertifyBtn"
            android:layout_gravity="end"
            android:background="@drawable/ui_bg_btn_round_border_red_small"
            android:text="@string/profile_certify_todo"
            android:textSize="12sp"
            android:textColor="@color/dd_red"
            android:layout_width="64dp"
            android:layout_height="28dp"/>
    </FrameLayout>

    <TextView
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ui_ic_edu"
        android:text="@string/profile_certify_edu_title"
        android:padding="15dp"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/line_light"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <FrameLayout
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eduCertifyDesc"
            android:textColor="@color/text_tip"
            android:text="@string/profile_certify_not_available"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.2"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/eduCertifyBtn"
            android:layout_gravity="end"
            android:background="@drawable/ui_bg_btn_round_border_red_small"
            android:text="@string/profile_certify_todo"
            android:textSize="12sp"
            android:textColor="@color/dd_red"
            android:layout_width="64dp"
            android:layout_height="28dp"/>
    </FrameLayout>

</LinearLayout>