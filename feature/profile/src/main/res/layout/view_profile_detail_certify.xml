<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:elevation="2dp"
    android:background="@drawable/ui_bg_white_border_10dp"
    android:orientation="vertical"
    tools:context=".detail.ProfileDetailActivity">

    <TextView
        android:id="@+id/officialCertify"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableStart="@drawable/ui_ic_certify"
        android:text="@string/profile_detail_official_certify"
        android:textSize="12sp"
        android:textColor="#333"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/officialCertifyLine"
        app:layout_constraintTop_toBottomOf="@+id/officialCertify"
        app:layout_constraintLeft_toLeftOf="@+id/officialCertify"
        app:layout_constraintRight_toRightOf="@+id/officialCertify"
        android:layout_marginTop="16dp"
        android:background="@color/dd_gray_middle"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/identifyCertify"
        app:layout_constraintTop_toBottomOf="@+id/officialCertifyLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/eduCertify"
        android:layout_marginTop="16dp"
        app:layout_goneMarginTop="0dp"
        android:text="@string/profile_detail_identify_certified"
        android:textSize="12sp"
        android:textColor="#333"
        android:drawableStart="@drawable/ui_ic_identify"
        android:drawablePadding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/eduCertify"
        app:layout_constraintTop_toBottomOf="@+id/officialCertifyLine"
        app:layout_constraintLeft_toRightOf="@+id/identifyCertify"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_goneMarginTop="0dp"
        android:text="@string/profile_detail_edu_certified"
        android:textSize="12sp"
        android:textColor="#333"
        android:drawableStart="@drawable/ui_ic_edu"
        android:drawablePadding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/introLine"
        app:layout_constraintTop_toBottomOf="@+id/identifyCertify"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:background="@color/dd_gray_middle"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/introEmpty"
        app:layout_constraintTop_toBottomOf="@+id/introLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/profile_detail_intro_none_tip"
        android:textColor="#FFA4AAB3"
        android:textSize="14sp"/>

    <com.dokiwa.dokidoki.ui.view.ExpandableTextView
        android:id="@+id/intro"
        app:layout_constraintTop_toBottomOf="@+id/introEmpty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#666"
        app:animation_duration="150"
        tools:text="无论环游洱海还是泸沽湖，包车都是比较省时又省力的方式，旺季记得要提前预定车辆。"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="?selectableItemBackgroundBorderless"
        android:id="@+id/introToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/intro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:textColor="@color/dd_red"
        tools:text="展开"/>

</androidx.constraintlayout.widget.ConstraintLayout>