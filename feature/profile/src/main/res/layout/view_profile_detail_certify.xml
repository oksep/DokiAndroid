<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:elevation="4dp"
    android:background="@drawable/bg_white_border_10dp"
    android:orientation="vertical"
    tools:context=".detail.ProfileDetailActivity">

    <TextView
        android:id="@+id/officialCertify"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableStart="@drawable/ui_ic_certify"
        android:text="官方认证"
        android:textSize="12sp"
        android:textColor="#333"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/officialCertifyLine"
        app:layout_constraintTop_toBottomOf="@+id/officialCertify"
        app:layout_constraintLeft_toLeftOf="@+id/officialCertify"
        app:layout_constraintRight_toRightOf="@+id/officialCertify"
        android:layout_marginTop="16dp"
        android:background="@color/dd_gray_middle"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/realNameCertify"
        app:layout_constraintTop_toBottomOf="@+id/officialCertifyLine"
        app:layout_constraintLeft_toLeftOf="@+id/officialCertify"
        app:layout_constraintRight_toLeftOf="@+id/academicCertify"
        android:layout_marginTop="16dp"
        android:text="实名认证(已认证)"
        android:textSize="12sp"
        android:textColor="#333"
        android:drawableStart="@drawable/ui_ic_realname"
        android:drawablePadding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/academicCertify"
        app:layout_constraintTop_toBottomOf="@+id/officialCertifyLine"
        app:layout_constraintLeft_toRightOf="@+id/realNameCertify"
        app:layout_constraintRight_toRightOf="@+id/officialCertify"
        android:layout_marginTop="16dp"
        android:text="学历认证(已认证)"
        android:textSize="12sp"
        android:textColor="#333"
        android:drawableStart="@drawable/ui_ic_academic"
        android:drawablePadding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/introLine"
        app:layout_constraintTop_toBottomOf="@+id/academicCertify"
        app:layout_constraintLeft_toLeftOf="@+id/officialCertify"
        app:layout_constraintRight_toRightOf="@+id/officialCertify"
        android:layout_marginTop="16dp"
        android:background="@color/dd_gray_middle"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/introEmpty"
        app:layout_constraintTop_toBottomOf="@+id/introLine"
        app:layout_constraintLeft_toLeftOf="@+id/officialCertifyLine"
        app:layout_constraintRight_toRightOf="@+id/officialCertifyLine"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TA太懒了，还没有填写简介。"
        android:textColor="#FFA4AAB3"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/intro"
        app:layout_constraintTop_toBottomOf="@+id/introEmpty"
        app:layout_constraintLeft_toLeftOf="@+id/officialCertifyLine"
        app:layout_constraintRight_toRightOf="@+id/officialCertifyLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:lineSpacingMultiplier="1.3"
        android:text="无论环游洱海还是泸沽湖，包车都是比较省时又省力的方式，旺季记得要提前预定车辆。"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>