<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail.ProfileDetailActivity">

    <com.dokiwa.dokidoki.ui.view.AppToolBar
        android:id="@+id/toolBar"
        style="@style/AppToolBar.Dark.Icon.Left"
        app:toolbar_titleText="个人中心"
        app:toolbar_titleTextSize="16sp"
        app:toolbar_titleTextPaddingV="0dp"
        app:toolbar_subTitleTextPaddingV="5dp"
        app:toolbar_subTitleVisibility="visible"
        app:toolbar_subTitleText="刚刚活跃"
        app:toolbar_subTitleTextColor="@color/text_tip"
        app:toolbar_subTitleTextSize="10sp"
        android:background="@color/white"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="wrap_content"/>

    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            tools:background="@color/dd_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dokiwa.dokidoki.ui.view.RoundImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/avatar"
                android:layout_marginBottom="26dp"
                app:rv_circle="true"
                app:rv_border_width="2dp"
                app:rv_border_color="@color/white"
                android:src="@drawable/ui_ic_avatar_default_female"
                android:scaleType="centerCrop"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <TextView
                android:id="@+id/age"
                app:layout_constraintLeft_toRightOf="@+id/avatar"
                app:layout_constraintTop_toTopOf="@+id/avatar"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:text="21岁 | 160cm | 本科"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/address"
                app:layout_constraintLeft_toRightOf="@+id/avatar"
                app:layout_constraintTop_toBottomOf="@+id/age"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="魔都 | 互联网 | 月入 5W"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/avatar"
                app:layout_constraintRight_toRightOf="@+id/avatar"
                app:layout_constraintTop_toBottomOf="@+id/avatar"
                android:layout_marginTop="8dp"
                android:text="ID:10086"
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.dokiwa.dokidoki.ui.view.TagsView
                android:id="@+id/tags"
                app:layout_constraintTop_toBottomOf="@+id/address"
                app:layout_constraintLeft_toRightOf="@+id/avatar"
                app:layout_constraintRight_toRightOf="parent"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                app:showDivider="middle"
                app:dividerDrawable="@drawable/divider_8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:constraint_referenced_ids="tags,userId"
                app:barrierDirection="bottom"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="16dp"/>

            <include
                android:id="@+id/certifyContainer"
                layout="@layout/view_profile_detail_certify"
                app:layout_constraintTop_toBottomOf="@+id/barrier"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_white_border_10dp"
                android:layout_marginTop="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <include
                layout="@layout/view_profile_detail_timeline"
                app:layout_constraintTop_toBottomOf="@+id/certifyContainer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                tools:layout_height="200dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>