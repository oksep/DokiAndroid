<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="4dp"
    android:background="@drawable/bg_white_border_10dp"
    tools:context=".detail.ProfileDetailActivity">

    <TextView
        android:text="照片墙"
        android:textColor="#FF666666"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="12dp"
        android:text="TA还没有展示图片"
        android:textColor="#FFA4AAB3"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.jaeger.ninegridimageview.NineGridImageView
        tools:background="@color/dd_green"
        android:layout_marginTop="12dp"
        android:id="@+id/nineGridImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imgGap="10dp"
        app:showStyle="grid"
        app:singleImgSize="200dp"/>

</LinearLayout>