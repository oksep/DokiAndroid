<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="2dp"
    android:background="@drawable/bg_white_border_10dp"
    tools:context=".detail.ProfileDetailActivity">

    <TextView
        android:text="@string/profile_detail_timeline_title"
        android:textColor="#FF666666"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/picturesEmpty"
        android:layout_marginTop="12dp"
        android:text="@string/profile_detail_timeline_none"
        android:textColor="#FFA4AAB3"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        tools:background="@color/dd_green"
        android:layout_marginTop="12dp"
        android:id="@+id/timelinePictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>