<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail.ProfileDetailActivity">

    <com.dokiwa.dokidoki.ui.view.AppToolBar
        android:id="@+id/toolBar"
        style="@style/AppToolBar.Dark.Icon.Left"
        app:toolbar_titleText="个人中心"
        app:toolbar_titleTextSize="16sp"
        app:toolbar_titleTextPaddingV="0dp"
        app:toolbar_subTitleTextPaddingV="5dp"
        app:toolbar_subTitleVisibility="visible"
        app:toolbar_subTitleText="刚刚活跃"
        app:toolbar_subTitleTextColor="@color/text_tip"
        app:toolbar_subTitleTextSize="10sp"
        android:background="@color/white"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="wrap_content"/>

    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            tools:background="@color/dd_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dokiwa.dokidoki.ui.view.RoundImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/avatar"
                android:layout_marginBottom="26dp"
                app:rv_circle="true"
                app:rv_border_width="2dp"
                app:rv_border_color="@color/white"
                android:src="@drawable/ic_avatar_default_female"
                android:scaleType="centerCrop"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <TextView
                android:id="@+id/age"
                app:layout_constraintLeft_toRightOf="@+id/avatar"
                app:layout_constraintTop_toTopOf="@+id/avatar"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:maxLines="1"
                android:text="21岁 | 160cm | 本科"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/address"
                app:layout_constraintLeft_toRightOf="@+id/avatar"
                app:layout_constraintTop_toBottomOf="@+id/age"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="魔都 | 互联网 | 月入 5W"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/avatar"
                app:layout_constraintRight_toRightOf="@+id/avatar"
                app:layout_constraintTop_toBottomOf="@+id/avatar"
                android:layout_marginTop="10dp"
                android:text="ID:10086"
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.dokiwa.dokidoki.profile.view.TagContainerView
                android:id="@+id/tags"
                app:layout_constraintTop_toBottomOf="@+id/address"
                app:layout_constraintLeft_toRightOf="@+id/avatar"
                app:layout_constraintRight_toRightOf="parent"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                app:showDivider="middle"
                app:dividerDrawable="@drawable/divider_8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:constraint_referenced_ids="tags,userId"
                app:barrierDirection="bottom"/>

            <View
                android:id="@+id/certifyBg"
                app:layout_constraintTop_toBottomOf="@+id/barrier"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/intro"
                android:background="@drawable/bg_white_border_10dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/officialCertify"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="@+id/certifyBg"
                app:layout_constraintLeft_toLeftOf="@+id/certifyBg"
                app:layout_constraintRight_toRightOf="@+id/certifyBg"
                android:elevation="2dp"
                android:drawableStart="@drawable/ic_certify"
                android:text="官方认证"
                android:textSize="13sp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_margin="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/officialCertifyLine"
                app:layout_constraintTop_toBottomOf="@+id/officialCertify"
                app:layout_constraintLeft_toLeftOf="@+id/officialCertify"
                app:layout_constraintRight_toRightOf="@+id/officialCertify"
                android:elevation="2dp"
                android:layout_marginTop="16dp"
                android:background="@color/dd_gray_middle"
                android:layout_width="0dp"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/realNameCertify"
                app:layout_constraintTop_toBottomOf="@+id/officialCertifyLine"
                app:layout_constraintLeft_toLeftOf="@+id/officialCertify"
                app:layout_constraintRight_toLeftOf="@+id/academicCertify"
                android:elevation="2dp"
                android:layout_marginTop="16dp"
                android:text="实名认证"
                android:drawableStart="@drawable/ic_realname"
                android:drawablePadding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/academicCertify"
                app:layout_constraintTop_toBottomOf="@+id/officialCertifyLine"
                app:layout_constraintLeft_toRightOf="@+id/realNameCertify"
                app:layout_constraintRight_toRightOf="@+id/officialCertify"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:text="学历认证"
                android:drawableStart="@drawable/ic_academic"
                android:drawablePadding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/intro"
                app:layout_constraintTop_toBottomOf="@+id/academicCertify"
                app:layout_constraintLeft_toLeftOf="@+id/officialCertifyLine"
                app:layout_constraintRight_toRightOf="@+id/officialCertifyLine"
                app:layout_constraintBottom_toBottomOf="@+id/certifyBg"
                android:elevation="2dp"
                android:layout_marginTop="16dp"
                android:lineSpacingMultiplier="1.3"
                android:paddingBottom="16dp"
                android:text="无论环游洱海还是泸沽湖，包车都是比较省时又省力的方式，旺季记得要提前预定车辆。"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/feedBg"
                app:layout_constraintTop_toBottomOf="@+id/certifyBg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/bg_white_border_10dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:layout_width="0dp"
                android:layout_height="100dp"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@+id/feedBg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>