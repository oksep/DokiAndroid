<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/micBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/picBtn"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/msg_selector_mic"
        android:minWidth="60dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/picBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/micBtn"
        app:layout_constraintRight_toLeftOf="@+id/cameraBtn"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/msg_ic_pic"
        android:scaleType="centerInside"
        android:minWidth="60dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/cameraBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/picBtn"
        app:layout_constraintRight_toLeftOf="@+id/emojiBtn"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/msg_ic_camera"
        android:scaleType="centerInside"
        android:minWidth="60dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/emojiBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cameraBtn"
        app:layout_constraintRight_toRightOf="parent"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/msg_selector_emoji"
        android:scaleType="centerInside"
        android:minWidth="60dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>