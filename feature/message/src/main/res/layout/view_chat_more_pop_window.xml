<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ui_bg_dropdown_inset"
    android:layout_margin="10dp"
    android:elevation="4dp"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/banBtn"
        android:background="?selectableItemBackground"
        android:drawablePadding="6dp"
        android:padding="8dp"
        android:drawableStart="@drawable/msg_ic_ban"
        android:text="@string/message_chat_ban"
        android:textSize="12sp"
        android:textColor="#666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/dd_gray_middle"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/tipOffBtn"
        android:background="?selectableItemBackground"
        android:padding="8dp"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/msg_ic_tip_off"
        android:textSize="12sp"
        android:textColor="#666"
        android:text="@string/message_chat_tip_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/dd_gray_middle"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/profileBtn"
        android:background="?selectableItemBackground"
        android:padding="8dp"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/msg_ic_person"
        android:textSize="12sp"
        android:textColor="#666"
        android:text="@string/message_chat_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>