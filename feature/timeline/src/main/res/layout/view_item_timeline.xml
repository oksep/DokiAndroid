<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:padding="15dp"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dokiwa.dokidoki.ui.view.RoundBorderImageView
        android:id="@+id/avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:borderColor="@color/dd_gray_light"
        app:borderWidth="1dp"
        tools:borderColor="@color/dd_green"
        android:src="@drawable/ui_ic_avatar_default_female"
        android:scaleType="centerCrop"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintRight_toLeftOf="@+id/followBtn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/dd_red"
        android:textSize="14sp"
        tools:text="DokiDoki酱"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/time"
        tools:text="刚刚活跃"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintLeft_toLeftOf="@id/name"
        android:textSize="12sp"
        android:textColor="#666"
        android:layout_marginBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/moreBtn"
        android:src="@drawable/timeline_ic_more"
        android:scaleType="center"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        tools:ignore="ContentDescription"/>

    <com.dokiwa.dokidoki.timeline.widget.FollowBtn
        android:id="@+id/followBtn"
        app:layout_constraintTop_toTopOf="@+id/moreBtn"
        app:layout_constraintBottom_toBottomOf="@+id/moreBtn"
        app:layout_constraintRight_toLeftOf="@+id/moreBtn"
        app:layout_goneMarginEnd="0dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.dokiwa.dokidoki.timeline.widget.TimelinePicturesView
        android:id="@+id/picturesContainer"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        app:layout_constraintLeft_toLeftOf="@+id/avatar"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@color/dd_gray_middle"
        android:layout_marginTop="15dp"
        tools:layout_height="150dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.dokiwa.dokidoki.timeline.widget.TimelineTextView
        android:id="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/picturesContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/position"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="上海·同济大学"
        android:drawableStart="@drawable/timeline_ic_location_gray"
        android:drawablePadding="5dp"
        android:textColor="#A4AAB3"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/commentCount"
        app:layout_constraintTop_toBottomOf="@+id/position"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"
        tools:text="10"
        android:textColor="#A4AAB3"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/commentBtn"
        android:src="@drawable/timeline_ic_comment"
        app:layout_constraintTop_toTopOf="@+id/commentCount"
        app:layout_constraintBottom_toBottomOf="@id/commentCount"
        app:layout_constraintRight_toLeftOf="@+id/commentCount"
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/upCount"
        app:layout_constraintTop_toTopOf="@+id/commentCount"
        app:layout_constraintBottom_toBottomOf="@id/commentCount"
        app:layout_constraintRight_toLeftOf="@+id/commentBtn"
        android:layout_marginEnd="18dp"
        tools:text="10"
        android:textColor="#A4AAB3"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/upBtn"
        android:src="@drawable/timeline_ic_unlike"
        app:layout_constraintTop_toTopOf="@+id/commentCount"
        app:layout_constraintBottom_toBottomOf="@id/commentCount"
        app:layout_constraintRight_toLeftOf="@+id/upCount"
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>
