<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:parentTag="com.dokiwa.dokidoki.home.widget.HomeTabs"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/homeTabFeed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/homeTabTimeline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/home_selector_tab_feed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription,UnusedAttribute"/>

    <ImageView
        android:id="@+id/homeTabTimeline"
        app:layout_constraintRight_toLeftOf="@+id/homeTabMsg"
        app:layout_constraintLeft_toRightOf="@+id/homeTabFeed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/home_selector_tab_timeline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription,UnusedAttribute"/>

    <ImageView
        android:id="@+id/homeTabMsg"
        app:layout_constraintRight_toLeftOf="@+id/homeTabMine"
        app:layout_constraintLeft_toRightOf="@+id/homeTabTimeline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/home_selector_tab_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription,UnusedAttribute"/>

    <TextView
        android:id="@+id/homeTagMsgUnreadCount"
        app:layout_constraintLeft_toLeftOf="@+id/homeTabMsg"
        app:layout_constraintTop_toTopOf="@+id/homeTabMsg"
        app:layout_constraintRight_toRightOf="@+id/homeTabMsg"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:background="@drawable/home_bg_unread_count"
        android:minWidth="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="8dp"
        tools:ignore="SpUsage"
        tools:text="56" />

    <ImageView
        android:id="@+id/homeTabMine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/homeTabMsg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/home_selector_tab_mine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription,UnusedAttribute"/>
</merge>