<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/dd_green"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/home_tab_feed"
        android:onClick="switchFeedPage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/home_tab_ufeed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:src="@drawable/ic_home_feed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/home_tab_ufeed"
        android:onClick="switchUFeedPage"
        app:layout_constraintLeft_toRightOf="@+id/home_tab_feed"
        app:layout_constraintRight_toLeftOf="@+id/home_tab_msg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        android:src="@drawable/ic_home_feed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/home_tab_msg"
        android:onClick="switchMsgPage"
        app:layout_constraintLeft_toRightOf="@+id/home_tab_ufeed"
        app:layout_constraintRight_toLeftOf="@+id/home_tab_ufeed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        android:src="@drawable/ic_home_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/home_tab_me"
        android:onClick="switchMePage"
        app:layout_constraintLeft_toRightOf="@+id/home_tab_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        android:src="@drawable/ic_home_me"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>