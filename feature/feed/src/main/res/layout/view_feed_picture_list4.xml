<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_height="100dp"
    tools:background="@color/dd_green">

    <include
        android:id="@+id/picture1"
        layout="@layout/view_feed_picture_list_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/picture2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <include
        android:id="@+id/picture2"
        layout="@layout/view_feed_picture_list_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/picture1"
        app:layout_constraintRight_toLeftOf="@+id/picture3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <include
        android:id="@+id/picture3"
        layout="@layout/view_feed_picture_list_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/picture2"
        app:layout_constraintRight_toLeftOf="@+id/picture4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <include
        android:id="@+id/picture4"
        layout="@layout/view_feed_picture_list_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/picture3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="6dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</merge>