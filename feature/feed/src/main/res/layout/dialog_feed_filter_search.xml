<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:background="@color/white"
    android:padding="15dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/genderTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="显示性别"
        android:textSize="12sp"
        android:textColor="#666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/genderMale"
        android:background="@drawable/feed_selector_filter_gender"
        android:text="男"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/genderTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12sp"
        android:textColor="@color/feed_selector_filter_gender"
        android:gravity="center"
        android:padding="6dp"
        android:minWidth="54dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/genderFemale"
        android:background="@drawable/feed_selector_filter_gender"
        android:text="女"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/genderTitle"
        app:layout_constraintLeft_toRightOf="@+id/genderMale"
        android:textSize="12sp"
        android:textColor="@color/feed_selector_filter_gender"
        android:gravity="center"
        android:padding="6dp"
        android:minWidth="54dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/genderAll"
        android:background="@drawable/feed_selector_filter_gender"
        android:text="不限"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/genderTitle"
        app:layout_constraintLeft_toRightOf="@+id/genderFemale"
        android:textSize="12sp"
        android:textColor="@color/feed_selector_filter_gender"
        android:gravity="center"
        android:padding="6dp"
        android:minWidth="54dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ageTitle"
        app:layout_constraintTop_toBottomOf="@id/genderMale"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:text="年龄"
        android:textSize="12sp"
        android:textColor="#666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ageDescription"
        app:layout_constraintTop_toBottomOf="@id/genderMale"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:text="0~100岁"
        android:textSize="12sp"
        android:textColor="#666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ageSeekBarContainer"
        app:layout_constraintTop_toBottomOf="@+id/ageTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="30dp">

        <com.dokiwa.dokidoki.ui.view.SeekBarPressure
            android:id="@+id/ageSeekBar"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/areaSelector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageSeekBarContainer"
        android:layout_marginTop="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="start"
            android:text="所在地"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/areaDescription"
            android:layout_gravity="end"
            android:text="全部地区"
            android:textSize="12sp"
            android:textColor="#A4AAB3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <Button
        android:id="@+id/resetButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areaSelector"
        app:layout_constraintRight_toLeftOf="@+id/confirmButton"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="@drawable/bg_btn_round_border_red"
        android:textSize="12sp"
        android:text="重置"
        android:textColor="@color/dd_red"
        android:layout_marginTop="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/confirmButton"
        app:layout_constraintLeft_toRightOf="@+id/resetButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areaSelector"
        android:layout_marginStart="30dp"
        android:background="@drawable/bg_btn_round_border_red"
        android:textSize="12sp"
        android:text="确认"
        android:textColor="@color/dd_red"
        android:layout_marginTop="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>