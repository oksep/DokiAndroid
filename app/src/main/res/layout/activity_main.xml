<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        app:title="Hello ToolBar"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        android:id="@+id/toAdmin"
        android:text="Admin"
        android:onClick="openAdminActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/toLogin"
        app:layout_constraintTop_toBottomOf="@id/toAdmin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Login"
        android:onClick="openLoginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.dokiwa.dokidoki.ui.view.RoundImageView
        android:id="@+id/img1"
        app:rv_circle="true"
        app:riv_border_color="@color/dd_red"
        app:riv_border_width="5dp"
        app:layout_constraintTop_toBottomOf="@id/toLogin"
        android:src="@drawable/test"
        android:layout_width="160dp"
        android:layout_height="160dp"/>

    <ImageView
        android:id="@+id/img2"
        android:src="@drawable/test"
        app:layout_constraintLeft_toRightOf="@+id/img1"
        app:layout_constraintTop_toTopOf="@+id/img1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        tools:ignore="ContentDescription"/>

</android.support.constraint.ConstraintLayout>