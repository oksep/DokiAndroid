<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oopsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:src="@drawable/ui_ic_oops_network"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/oopsIcon"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/oops"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#666"
        android:text="Oops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/oopsIcon"/>

    <TextView
        android:id="@+id/oopsMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oops"
        android:layout_marginTop="6dp"
        android:lineSpacingMultiplier="1.3"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#A4AAB3"
        tools:text="与世界线的连接中断了？\n（ 网络连接错误 ）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>