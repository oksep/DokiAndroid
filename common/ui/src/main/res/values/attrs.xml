<resources>

    <declare-styleable name="RoundImageView">
        <attr name="rv_radius" format="dimension"/>
        <attr name="rv_circle" format="boolean"/>
        <attr name="rv_border_width" format="dimension"/>
        <attr name="rv_border_color" format="color|reference"/>
        <attr name="rv_radius_top_left" format="dimension"/>
        <attr name="rv_radius_top_right" format="dimension"/>
        <attr name="rv_radius_bottom_left" format="dimension"/>
        <attr name="rv_radius_bottom_right" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AppToolBar">
        <!--left icon-->
        <attr name="toolbar_leftIcon" format="reference"/>
        <attr name="toolbar_leftIconVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <!--right icon-->
        <attr name="toolbar_rightIcon" format="reference"/>
        <attr name="toolbar_rightIconVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <!--left text-->
        <attr name="toolbar_leftTextColor" format="reference|color"/>
        <attr name="toolbar_leftText" format="reference|string"/>
        <attr name="toolbar_leftTextPaddingH" format="dimension"/>
        <attr name="toolbar_leftTextPaddingV" format="dimension"/>
        <attr name="toolbar_leftTextSize" format="dimension"/>
        <attr name="toolbar_leftTextVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <!--right text-->
        <attr name="toolbar_rightTextColor" format="reference"/>
        <attr name="toolbar_rightText" format="reference|string"/>
        <attr name="toolbar_rightTextPaddingH" format="dimension"/>
        <attr name="toolbar_rightTextPaddingV" format="dimension"/>
        <attr name="toolbar_rightTextSize" format="dimension"/>
        <attr name="toolbar_rightTextVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <!--title-->
        <attr name="toolbar_titleTextColor" format="reference"/>
        <attr name="toolbar_titleText" format="reference|string"/>
        <attr name="toolbar_titleTextPaddingH" format="dimension"/>
        <attr name="toolbar_titleTextPaddingV" format="dimension"/>
        <attr name="toolbar_titleTextSize" format="dimension"/>
        <attr name="toolbar_titleVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <!--subtitle-->
        <attr name="toolbar_subTitleTextColor" format="reference"/>
        <attr name="toolbar_subTitleText" format="string|string"/>
        <attr name="toolbar_subTitleTextPaddingH" format="dimension"/>
        <attr name="toolbar_subTitleTextPaddingV" format="dimension"/>
        <attr name="toolbar_subTitleTextSize" format="dimension"/>
        <attr name="toolbar_subTitleVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="WaterMaskView">
        <attr name="wm_text" format="reference|string"/>
        <attr name="wm_angle" format="float"/>
        <attr name="wm_color" format="reference|color"/>
        <attr name="wm_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="UnderlinedTextView">
        <attr name="underlineWidth" format="dimension"/>
        <attr name="underlineColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TagsView">
        <attr name="size" format="enum">
            <enum name="small" value="0"/>
            <enum name="large" value="1"/>
        </attr>
        <attr name="editable" format="boolean"/>
        <attr name="defaultSelected" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="EditableRoundImage">
        <attr name="editIcon" format="reference"/>
        <attr name="editIconWidth" format="dimension"/>
        <attr name="editIconHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RoundBorderImageView">
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SpanTextView">
        <attr name="spanText" format="string|reference"/>
    </declare-styleable>

</resources>
