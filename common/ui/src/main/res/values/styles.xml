    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- dialog -->
    <style name="AppThemeDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dd_red</item>
        <item name="android:textColorPrimary">@color/text_dft</item>
    </style>

    <!-- alert dialog -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dd_red</item>
        <item name="android:textColorPrimary">@color/text_dft</item>
        <item name="android:windowBackground">@drawable/bg_with_corner</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="FullDialog" parent="AppThemeDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NormalDialog" parent="AppThemeDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SpinnerDatePickerDialog" parent="AppCompatAlertDialogStyle">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <style name="SpinnerDatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="AppToolBar">

        <item name="toolbar_leftIcon">@drawable/ic_back_light</item>
        <item name="toolbar_leftIconVisibility">visible</item>

        <item name="toolbar_rightIcon">@drawable/ic_forward_light</item>
        <item name="toolbar_rightIconVisibility">visible</item>

        <item name="toolbar_leftTextColor">@color/white</item>
        <item name="toolbar_leftTextPaddingH">0dp</item>
        <item name="toolbar_leftTextPaddingV">0dp</item>
        <item name="toolbar_leftTextSize">13sp</item>
        <item name="toolbar_leftTextVisibility">visible</item>

        <item name="toolbar_rightTextColor">@color/white</item>
        <item name="toolbar_rightTextPaddingH">0dp</item>
        <item name="toolbar_rightTextPaddingV">0dp</item>
        <item name="toolbar_rightTextSize">13sp</item>
        <item name="toolbar_rightTextVisibility">visible</item>

        <item name="toolbar_titleTextColor">@color/white</item>
        <item name="toolbar_titleTextPaddingH">0dp</item>
        <item name="toolbar_titleTextPaddingV">0dp</item>
        <item name="toolbar_titleTextSize">16sp</item>
        <item name="toolbar_titleVisibility">visible</item>

        <item name="toolbar_subTitleTextColor">@color/white</item>
        <item name="toolbar_subTitleTextPaddingH">0dp</item>
        <item name="toolbar_subTitleTextPaddingV">0dp</item>
        <item name="toolbar_subTitleVisibility">gone</item>
        <item name="toolbar_subTitleTextSize">5sp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">@drawable/bg_toolbar</item>
    </style>

    <style name="AppToolBar.Text" parent="AppToolBar">
        <item name="toolbar_leftIconVisibility">gone</item>
        <item name="toolbar_rightIconVisibility">gone</item>
    </style>

    <style name="AppToolBar.Text.Left" parent="AppToolBar.Text">
        <item name="toolbar_rightTextVisibility">gone</item>
    </style>

    <style name="AppToolBar.Text.Right" parent="AppToolBar.Text">
        <item name="toolbar_leftTextVisibility">gone</item>
    </style>

    <style name="AppToolBar.Icon" parent="AppToolBar">
        <item name="toolbar_leftTextVisibility">gone</item>
        <item name="toolbar_rightTextVisibility">gone</item>
    </style>

    <style name="AppToolBar.Icon.Left" parent="AppToolBar.Icon">
        <item name="toolbar_rightIconVisibility">gone</item>
    </style>

    <style name="AppToolBar.Icon.Right" parent="AppToolBar.Icon">
        <item name="toolbar_leftIconVisibility">gone</item>
    </style>

</resources>