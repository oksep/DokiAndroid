<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:buttonStyle">@android:style/Widget.Material.Button.Borderless.Colored</item>
        <item name="android:dialogTheme">@style/AppThemeDialogStyle</item>
        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <!--<item name="colorControlHighlight">@color/dd_red</item>-->
        <!--<item name="android:background">@color/white</item>-->

        <!--主色调 -->
        <item name="colorPrimary">@color/dd_blue</item>
        <!--状态栏颜色-->
        <!--<item name="colorPrimaryDark">@color/transparent</item>-->
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/dd_red</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/dd_window</item>
        <!--底部导航栏颜色-->
        <!--<item name="android:navigationBarColor">@color/transparent</item>-->
        <!--ToolBar上的Title颜色-->
        <item name="android:textColorPrimary">@color/text_dft</item>
        <!--各个控制控件的默认颜色 与colorAccent相反-->
        <item name="android:colorControlNormal">@color/dd_gray_middle</item>
        <!--控制所有可点击的View的涟漪效果颜色-->
        <!--<item name="android:colorControlHighlight">@color/dd_red</item>-->
        <!--EditText 输入框中字体的颜色-->
        <item name="android:editTextColor">@color/text_dft</item>
        <item name="android:textColor">@color/text_dft</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- dialog -->
    <style name="AppThemeDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dd_red</item>
        <item name="android:textColorPrimary">@color/text_dft</item>
    </style>

    <!-- alert dialog -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dd_red</item>
        <item name="android:colorAccent">@color/dd_red</item>
        <item name="android:textColorPrimary">@color/text_dft</item>
        <item name="android:windowBackground">@drawable/bg_with_corner</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="FullDialog" parent="AppThemeDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NormalDialog" parent="AppThemeDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SpinnerDatePickerDialog" parent="AppCompatAlertDialogStyle">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <style name="SpinnerDatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="BottomDialog" parent="NormalDialog">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>

    <style name="BottomInAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>

</resources>